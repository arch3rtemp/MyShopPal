<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="eu.tutorials.myshoppal.presentation.dashboard.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/navigation_products"
        android:name="eu.tutorials.myshoppal.presentation.dashboard.product.ProductsFragment"
        android:label="@string/title_products"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_orders"
        android:name="eu.tutorials.myshoppal.presentation.dashboard.order.OrdersFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/navigation_sold_products"
        android:name="eu.tutorials.myshoppal.presentation.dashboard.sold.SoldFragment"
        android:label="@string/title_sold_products"
        tools:layout="@layout/fragment_sold" />
</navigation>